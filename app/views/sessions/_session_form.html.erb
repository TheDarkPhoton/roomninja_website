<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <h1>Login</h1>

    <% if @error %>
      <div class="alert alert-danger">
        Login details could not be recognized
      </div>
    <% end %>

    <%= form_for :session, url: login_path, remote: true do |f| %>
      <div>
        <%= f.email_field :email, class: 'form-control', placeholder: 'firstname.lastname@domain.ac.uk' %>
      </div><br>

      <div>
        <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
      </div><br>

      <%= f.label :remember_me, class: 'checkbox-inline' do %>
        <%= f.check_box :remember_me %> Remember me on this computer
      <% end %>
      <br><br>

      <div class="row">
        <div class="col-lg-6">
          <%= f.submit 'Login', class: 'btn btn-primary max-width' %>
        </div>
        <div class="col-lg-6">
          <%= f.submit 'Cancel', class: 'btn btn-primary max-width' %>
        </div>
      </div><br>

      <p class="inline">Forgot password? Reset <%= link_to 'here', '' %></p>
    <% end %>
  </div>
</div>