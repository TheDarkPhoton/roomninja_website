<div id="room-id-<%= f.id %>" class="well well-sm">
  <b class="spaced-row"><%= f.name %></b><br>
  <p>Description: <%= f.description %></p>
  <p>Capacity: <%= f.capacity %></p>

  <% booking_day = f.booking_days.find_by(day: BookingDay::DAYS[@current_time.wday]) %>
  <%= link_to new_booking_day_booking_time_path(booking_day, room_id: f.id), class: 'btn btn-primary max-width ', remote: true do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Select
  <% end %>
</div>