<div class="container">
  <div class="jumbotron text-center">
    <h1><%= @user.email %></h1>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <h4>Find Rooms</h4>
      <div class="well well-sm">
        <%= render 'booking_days/find_form' %>
      </div>

      <h4>Your Bookings</h4>
      <div id="user-bookings">
        <%= render 'user_bookings' %>
      </div>
    </div>

    <div class="col-lg-8">
      <h4>Available Rooms on Day of xx/xx/xxxx (<%= link_to 'Refresh', booking_days_path, remote: true, 'show-target': '#room-loading-bar' %>)</h4>
      <div id="room-loading-bar">
        <div class="progress">
          <div class="progress-bar progress-bar-striped active" role="progressbar"
               aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
          </div>
        </div>
      </div>
      <div id="room-list"></div>
    </div>
  </div>

  <script>
    remote_call("GET", "<%= booking_days_path %>");
  </script>
</div>